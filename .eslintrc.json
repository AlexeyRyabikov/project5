{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "babelOptions": {
          "babelrc": false,
          "configFile": false,
          // your babel options
          "presets": ["@babel/preset-env","@babel/preset-react"]
          ,  "targets": {
            "chrome": "58",
            "ie": "11"
          }},// "@babel/preset-react"
        "ecmaFeatures": {
          "jsx": true
        }, 
        "ecmaVersion": "latest",
        "sourceType": "module"
      },   
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "overrides": [
        {"files": ["*.jsx", "*.js"]}
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": "error"
    }
}
